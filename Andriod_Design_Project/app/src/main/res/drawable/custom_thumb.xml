<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/swipe_button_color"/>
            <size android:width="71dp"
                android:height="42dp"/>
            <corners android:radius="50dp"></corners>

            <stroke
                android:width="1dp"
                android:color="@color/swipe_button_corner" />
        </shape>

    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/swipe_button_color"/>
            <size android:width="71dp" android:height="42dp"/>
            <corners android:radius="50dp"></corners>

            <stroke
                android:width="1dp"
                android:color="@color/swipe_button_corner" />
        </shape>
    </item>
</selector>