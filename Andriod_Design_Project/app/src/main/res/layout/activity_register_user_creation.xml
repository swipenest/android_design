<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_background"
    tools:context=".activity.design.reg.UserCreationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="13dp"
            android:text="Create User ID and Password"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/project_orange"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_bottom_line"
            android:hint="Username"
            android:lineHeight="0dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textColorHint="#343F4B" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/edittext_bottom_line"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingRight="30dp"
                android:lineHeight="0dp"
                android:textColor="@color/black"
                android:textColorHint="#343F4B" />

            <ImageView
                android:id="@+id/show_pass_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/eye" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/edittext_bottom_line"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:lineHeight="0dp"
                android:textColor="@color/black"
                android:textColorHint="#343F4B" />

            <ImageView
                android:id="@+id/show_confirm_pass_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/eye"
                android:visibility="invisible"/>
        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateUser"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:radius="50dp"
            android:text="Next"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="visible"
            android:backgroundTint="#FF9052"
            android:background="@drawable/registration_button"
            tools:visibility="visible" />

    </LinearLayout>
</LinearLayout>