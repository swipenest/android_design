<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
       <item name="android:textColorHint">#343F4B</item>
        <item name="colorControlNormal">#343F4B</item>
        <item name="colorControlActivated">#343F4B</item>
        <item name="colorControlHighlight">#343F4B</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="spinner_item_style" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#000</item>
    </style>

    <style name="datePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
